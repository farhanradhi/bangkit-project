<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SampahIn" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <style name="ButtonGreen">
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonWhite">
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ActiveTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="InactiveTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="Theme.SampahIn" parent="Base.Theme.SampahIn" />

</resources>